generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ContactFormSubmission{
  // MongoDB requires an ObjectId for the ID.
  // The @map("_id") maps the 'id' field to MongoDB's internal '_id' field.
  id String  @id @default(auto()) @map("_id") @db.ObjectId

  name String
  email String
  phone String
  message String

  createdAt DateTime @default(now())
}